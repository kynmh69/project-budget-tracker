// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator go {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id        String   @id @default(cuid())
  name      String
  budget    Float
  startDate DateTime
  endDate   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workLogs     WorkLog[]
  transactions Transaction[]

  @@map("projects")
}

model Engineer {
  id         String   @id @default(cuid())
  name       String
  position   String
  hourlyRate Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  workLogs WorkLog[]

  @@map("engineers")
}

model WorkLog {
  id          String      @id @default(cuid())
  engineerId  String
  projectId   String
  hours       Float
  date        DateTime
  description String
  category    String
  type        WorkLogType
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  engineer Engineer @relation(fields: [engineerId], references: [id], onDelete: Cascade)
  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("work_logs")
}

model Transaction {
  id          String          @id @default(cuid())
  projectId   String
  type        TransactionType
  amount      Float
  category    String
  date        DateTime
  description String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

enum WorkLogType {
  PLANNED
  ACTUAL
}

enum TransactionType {
  INCOME
  EXPENSE
}